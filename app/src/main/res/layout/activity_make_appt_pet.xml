<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".make_appt_pet">

    <ImageView
        android:id="@+id/pethome_logo"
        android:layout_width="62dp"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/pethome_logo" />

    <ImageView
        android:id="@+id/pethome_name"
        android:layout_width="140dp"
        android:layout_height="58dp"
        android:layout_marginStart="0dp"
        android:layout_toEndOf="@+id/pethome_logo"
        android:scaleType="fitCenter"
        android:src="@drawable/pethome_name" />

    <ImageButton
        android:id="@+id/btn_noti"
        android:layout_width="63dp"
        android:layout_height="53dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="86dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/pethome_name"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        android:src="@drawable/button_noti" />

    <ImageButton
        android:id="@+id/btn_settings"
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="7dp"
        android:layout_toEndOf="@+id/btn_noti"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        android:src="@drawable/btn_settings" />

    <TextView
        android:id="@+id/lbl_appt"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="110dp"
        android:text="Appointment"
        android:textSize="34sp"
        android:textStyle="bold" />

    <CalendarView
        android:id="@+id/appt_calendarView"
        android:layout_width="334dp"
        android:layout_height="305dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="125dp"
        android:layout_marginEnd="48dp" />

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="77dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="71dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        android:src="@drawable/button_back" />

    <Button
        android:id="@+id/btn_appt_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="244dp"
