<?xml version="1.0" encoding="utf-8"?>

<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyProfileNewFragment"
    android:weightSum="10"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    >
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:weightSum="10"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <ImageView
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:src="@drawable/spca_logo"
            android:layout_gravity="center"
            ></ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:text="SPCA"
            android:fontFamily="@font/crimson_pro_bold"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textAlignment="center"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:text="SG's only community animal clinic shelter cruelty and welfare"
            android:fontFamily="@font/crimson_pro"
            android:textColor="#000000"
            android:textSize="10dp"
            android:textAlignment="center"></TextView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnEditProfile"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:background="@drawable/editprofile_button"
            android:text="Edit Profile"
            android:textSize="15dp"
            android:fontFamily="@font/crimson_pro"
            android:textColor="#000000"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"></Space>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:weightSum="8">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                app:cardCornerRadius="10dp"
                android:layout_margin="10dp">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="10"
                    android:orientation="vertical">
                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="@drawable/green_button_bg"
                        android:backgroundTint="#00FFFFFF"
                        android:scaleType="centerCrop"
                        android:layout_weight="7"
                        android:src="@drawable/cat1"/>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:orientation="horizontal"
                        android:weightSum="5">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="Joshua"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:background="@color/white"
                            android:alpha="0.8"
                            android:layout_weight="3"
                            android:textColor="#1B703D"
                            android:textStyle="bold"
                            android:fontFamily="@font/inter_bold">
                        </TextView>

                        <TextView
                            android:paddingRight="10dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:alpha="0.8"
                            android:background="@color/white"
                            android:fontFamily="@font/inter_bold"
                            android:paddingLeft="10dp"
                            android:text="2M"
                            android:textAlignment="viewEnd"
                            android:textColor="#1B703D"
                            android:textStyle="bold"></TextView>
                    </androidx.appcompat.widget.LinearLayoutCompat>


                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                app:cardCornerRadius="10dp"
                android:layout_margin="10dp">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="10"
                    android:orientation="vertical">
                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="@drawable/dog1"
                        android:backgroundTint="#00FFFFFF"
                        android:scaleType="centerCrop"
                        android:layout_weight="7"
                        android:src="@drawable/dog1"/>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:orientation="horizontal"
                        android:weightSum="5">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="Tammy"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:background="@color/white"
                            android:alpha="0.8"
                            android:layout_weight="3"
                            android:textColor="#1B703D"
                            android:textStyle="bold"
                            android:fontFamily="@font/inter_bold">
                        </TextView>

                        <TextView
                            android:paddingRight="10dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:alpha="0.8"
                            android:background="@color/white"
                            android:fontFamily="@font/inter_bold"
                            android:paddingLeft="10dp"
                            android:text="4M"
                            android:textAlignment="viewEnd"
                            android:textColor="#1B703D"
                            android:textStyle="bold"></TextView>
                    </androidx.appcompat.widget.LinearLayoutCompat>


                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.cardview.widget.CardView>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:weightSum="8">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                app:cardCornerRadius="10dp"
                android:layout_margin="10dp">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="10">

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="7"
                        android:background="@drawable/green_button_bg"
                        android:backgroundTint="#00FFFFFF"
                        android:scaleType="centerCrop"
                        android:src="@drawable/dog2" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:orientation="horizontal"
                        android:weightSum="5">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:alpha="0.8"
                            android:background="@color/white"
                            android:fontFamily="@font/inter_bold"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:text="Tenia"
                            android:textColor="#1B703D"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:alpha="0.8"
                            android:background="@color/white"
                            android:fontFamily="@font/inter_bold"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="6M"
                            android:textAlignment="viewEnd"
                            android:textColor="#1B703D"
                            android:textStyle="bold"></TextView>
                    </androidx.appcompat.widget.LinearLayoutCompat>


                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                app:cardCornerRadius="10dp"
                android:layout_margin="10dp">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="10"
                    android:orientation="vertical">
                    <ImageButton
                        android:id="@+id/leftImage"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="@drawable/green_button_bg"
                        android:backgroundTint="#00FFFFFF"
                        android:scaleType="centerCrop"
                        android:layout_weight="7"
                        android:src="@drawable/dog3"/>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:orientation="horizontal"
                        android:weightSum="5">
                        <TextView
                            android:id="@+id/leftName"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="Tingle"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:background="@color/white"
                            android:alpha="0.8"
                            android:layout_weight="3"
                            android:textColor="#1B703D"
                            android:textStyle="bold"
                            android:fontFamily="@font/inter_bold">
                        </TextView>

                        <TextView
                            android:paddingRight="10dp"
                            android:id="@+id/leftAge"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:alpha="0.8"
                            android:background="@color/white"
                            android:fontFamily="@font/inter_bold"
                            android:paddingLeft="10dp"
                            android:text="2M"
                            android:textAlignment="viewEnd"
                            android:textColor="#1B703D"
                            android:textStyle="bold"></TextView>
                    </androidx.appcompat.widget.LinearLayoutCompat>


                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.cardview.widget.CardView>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_AddPet"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/fui_transparent"
            android:src="@drawable/add_square"
            android:layout_gravity="center"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.appcompat.widget.LinearLayoutCompat>
