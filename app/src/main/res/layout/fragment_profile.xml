<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/orangutan"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/spca"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvProfileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/orangutan"
        android:layout_marginTop="10dp"
        android:text="SPCA"
        android:textSize="26dp"
        android:textColor="@color/black"
        android:fontFamily="@font/inter_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orangutan" />

    <ImageView
        android:id="@+id/adoption"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/adoption"
        app:layout_constraintEnd_toStartOf="@+id/deworming"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvProfileName" />

    <TextView
        android:id="@+id/edt_adoptionname"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/adoption"
        android:hint="Kitty"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/edt_dewormingname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adoption" />

    <ImageView
        android:id="@+id/deworming"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/deworming"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/adoption"
        app:layout_constraintTop_toBottomOf="@+id/tvProfileName" />


    <TextView
        android:id="@+id/edt_dewormingname"
        android:layout_width="150dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_below="@id/deworming"
        android:hint="Birb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/edt_adoptionname"
        app:layout_constraintTop_toBottomOf="@+id/deworming" />

    <ImageView
        android:id="@+id/sterilise"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/sterilise"
        app:layout_constraintEnd_toStartOf="@+id/vaccination"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_adoptionname" />

    <TextView
        android:id="@+id/edt_sterilisename"
        android:layout_width="150dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_adoptionname"
        android:hint="Jason"
        app:layout_constraintEnd_toStartOf="@+id/edt_vaccinationname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sterilise" />

    <ImageView
        android:id="@+id/vaccination"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/edt_dewormingname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/vaccination"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sterilise"
        app:layout_constraintTop_toBottomOf="@+id/edt_dewormingname" />

    <TextView
        android:id="@+id/edt_vaccinationname"
        android:layout_width="150dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_below="@id/vaccination"
        android:hint="Sally"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/edt_sterilisename"
        app:layout_constraintTop_toBottomOf="@+id/vaccination" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_make_appt"
        android:layout_width="287dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="40dp"
        android:layout_toStartOf="@+id/btn_message"
        android:background="@drawable/green_button_bg"
        android:text="Make Appointment"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/btn_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_sterilisename" />

    <ImageButton
        android:id="@+id/btn_message"
        android:layout_width="56dp"
        android:layout_height="44dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="40dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        android:src="@drawable/btn_message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_make_appt"
        app:layout_constraintTop_toBottomOf="@+id/edt_vaccinationname" />

</androidx.constraintlayout.widget.ConstraintLayout>
